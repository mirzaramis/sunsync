function HeroArrayIllustration() {
  return (
    <svg viewBox="0 0 600 400" className="w-full h-auto" aria-hidden="true">
      <defs>
        <linearGradient id="g1" x1="0" x2="1"><stop offset="0" stopColor="#10b981" stopOpacity="0.3" /><stop offset="1" stopColor="#0ea5e9" stopOpacity="0.3" /></linearGradient>
      </defs>
      <rect x="0" y="0" width="600" height="400" fill="url(#g1)" opacity="0.2" />
      {Array.from({ length: 6 }).map((_, r) => (
        <g key={r} transform={`translate(40, ${40 + r * 55})`}>
          {Array.from({ length: 8 }).map((_, c) => (
            <rect key={c} x={c * 60} y={0} width={52} height={40} rx={6} fill="#fff" stroke="#cbd5e1" />
          ))}
        </g>
      ))}
      <circle cx="520" cy="320" r="40" fill="#10b981" opacity="0.2" />
      <circle cx="540" cy="90" r="24" fill="#0ea5e9" opacity="0.2" />
    </svg>
  );
}

